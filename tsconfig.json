{
	"compilerOptions": {
		"baseUrl": ".",
		"inlineSourceMap": true,
		"inlineSources": true,
		"module": "ESNext",
		"target": "ES6",
		"allowJs": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"isolatedModules": true,
		"strictNullChecks": true,
		"lib": [
			"DOM",
			"ES5",
			"ES6",
			"ES7"
		],
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"typeRoots": [
			"./node_modules/@types",
			"./types",
			"./node_modules/obsidian-dataview"
		],
		"types": ["jest"],
		"paths": {
			"*": [
				"./node_modules/obsidian-dataview/lib/*"
			]
		}
	},
	"include": [
		"**/*.ts"
	]
}
